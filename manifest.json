{
    "manifest_version": 2,
    "name": "Midnight Lizard",
    "short_name": "Mid.Lizard",
    "description": "This extension changes page colors, brightness and contrast to increase readability",
    "version": "8.0.0",
    "author": "Pavel Agarkov",
    "icons": {
        "128": "img/ml-icon-128+.png",
        "48": "img/ml-icon-48++.png",
        "32": "img/ml-icon-32.png",
        "16": "img/ml-icon-16.png"
    },
    "permissions": [
        "storage"
    ],
    "offline_enabled": true,
    "browser_action": {
        "default_title": "Midnight Lizard",
        "default_icon": {
            "38": "img/ml-toolbar-icon-38.png"
        },
        "default_popup": "ui/popup.html"
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "match_about_blank": true,
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content-script.js"
            ],
            "css": [
                "css/content-vars.css"
            ]
        },
        {
            "run_at": "document_idle",
            "match_about_blank": true,
            "matches": [
                "https://*/*/chrome/newtab*"
            ],
            "css": [
                "css/custom/chrome-new-tab.css"
            ]
        },
        {
            "run_at": "document_idle",
            "all_frames": true,
            "match_about_blank": true,
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "css/content-idle.css"
            ]
        },
        {
            "run_at": "document_start",
            "matches": [
                "https://www.youtube.com/*"
            ],
            "css": [
                "css/custom/youtube.css"
            ]
        },
        {
            "run_at": "document_start",
            "matches": [
                "https://mail.google.com/*"
            ],
            "css": [
                "css/custom/gmail.css"
            ]
        },
        {
            "run_at": "document_start",
            "matches": [
                "https://plus.google.com/*"
            ],
            "css": [
                "css/custom/google-plus.css"
            ]
        },
        {
            "run_at": "document_start",
            "matches": [
                "https://*.wikipedia.org/*"
            ],
            "css": [
                "css/custom/wikipedia.css"
            ]
        }
    ]
}