{
    "include": [
        "./ts/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "pretty": true,
        "outDir": "./js",
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "target": "es5",
        "sourceMap": true,
        "allowJs": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "lib": [
            "es6", "dom"
        ]
    }
}